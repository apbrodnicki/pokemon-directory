{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard-with-typescript",
		"plugin:react/recommended",
		"plugin:@stylistic/disable-legacy",
		"eslint:recommended"
	],
	"ignorePatterns": [
		"node_modules"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"@stylistic"
	],
	"rules": {
		"@stylistic/eol-last": [
			"error",
			"always"
		],
		"@stylistic/quotes": [
			"error",
			"single"
		],
		"@stylistic/semi": [
			"error",
			"always"
		],
		"@stylistic/indent": [
			"error",
			"tab"
		],
		"semi-style": [
			"error",
			"last"
		]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}